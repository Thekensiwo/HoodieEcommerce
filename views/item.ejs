                            <defs>
                                <clipPath id="clip0">
                                    <rect width="62" height="62" fill="white" transform="translate(0 62) rotate(-90)" />
                                </clipPath>
                            </defs>
                        </svg>

                    </div>


                </div>

            </div>

        </main>


        <!-- Footer -->
        <%- include('./partials/footer') %>

            <script src="https://cdnjs.cloudflare.com/ajax/libs/tiny-slider/2.9.2/min/tiny-slider.js"></script>
</body>

</html>